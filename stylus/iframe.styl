c_WQXRblue = #26ACE2;
c_WQXRdark = #0673BA;

body {
  font-family: 'Gotham SSm A', 'Gotham SSm B', "Avenir Next", Avenir, Helvetica, sans-serif;
}

#loading {
  margin: 50px 0;
  text-align: center;
}

.toggle, .button {
  display: inline-block;
  text-decoration: none;
  padding: 3px 5px;
  color: black;
  border: 1px solid #ccc;
  
  &:hover {
    background-color: #ddd;
  }
  &:active {
    background-color: c_WQXRblue;
  }
}

.play-button {
  display: none;
  position: absolute;
  top: 40%;
  left: 40%;
  background-color: white;
  height: 50px;
  width: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 30px;
  border-radius: 50px;
  text-indent: 7px;
  border-width: 3px;
  opacity: 0.85;
}

.toggle {
  border-right-width: 0;
  border-radius: none;
  
  &.selected {
    background-color: c_WQXRdark;
    border-color: c_WQXRdark;
    color: white;
    
    &:hover, &:active {
      background-color: c_WQXRdark;
    }
  }
  
  &:first-child {
    border-radius: 4px 0 0 4px;
  }
  &:last-child {
    border-radius: 0 4px 4px 0;
    border-right-width: 1px;
  }
}
